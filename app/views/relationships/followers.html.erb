<% if @users.exists? %>

  <h2>Follower Users</h2>

  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |follower| %>
    <tr>
      <td><%= image_tag follower.get_profile_image(50,50) %></td>
      <td><%= follower.name %></td>
      <td>フォロー数: <%= follower.followings.count %></td>
      <td>フォロワー数: <%= follower.followers.count %></td>
      <td><%= link_to "Show", user_path(follower.id) %></td>
    </tr>
    <% end %>
  </table>

  <% else %>

  <p>ユーザーはいません</p>

<% end %>