<% if @users.exists? %>

  <h2>Follow Users</h2>

  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |following| %>
    <tr>
      <td><%= image_tag following.get_profile_image(50,50) %></td>
      <td><%= following.name %></td>
      <td>フォロー数: <%= following.followings.count %></td>
      <td>フォロワー数: <%= following.followers.count %></td>
      <td><%= link_to "Show", user_path(following.id) %></td>
    </tr>
    <% end %>
  </table>

  <% else %>

  <p>ユーザーはいません</p>

<% end %>