<div class="container">
  <div class="row">
    <div class="co-lg-12 mx-auto my-3">

      <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

      <h1>User info</h1>

      <%= form_with model:@user, url: user_path(@user.id), method: :patch do |f| %>

      Name<br>
      <%= f.text_field :name %><br>

      Image<br>
      <%= f.file_field :profile_image %><br>

      Introduction<br>
      <%= f.text_area :introduction %><br>

      <%= f.submit 'Update User' %>
      <% end %>

    </div>
  </div>
</div>