<div class="container">
  <div class="row">

    <%= render 'books/leftbar' %>

    <div class="right-bar col-md-8 offset-md-1 my-3">
      <h2>Users</h2>

      <%= link_to "グループを作成する", new_group_path  %>｜
      <%= link_to "グループ一覧", groups_path %>

      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <% @users.each do |user| %>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td>フォロー数<%= user.followings.count %></td>
          <td>フォロワー数<%= user.followers.count %></td>
          <td><%= render "relationships/btn", user: user %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
          <% end %>
      </table>
    </div>

  </div>
</div>

